# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from: https://app.supabase.com/project/_/settings/api

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here


# ========================================
# NEXTAUTH CONFIGURATION
# ========================================
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here


# ========================================
# GOOGLE GEMINI AI
# ========================================
# Get your API key from: https://makersuite.google.com/app/apikey

API_KEY=your_gemini_api_key_here


# ========================================
# STRIPE PAYMENT CONFIGURATION
# ========================================
# Get these from: https://dashboard.stripe.com/apikeys
# Webhook secret from: https://dashboard.stripe.com/webhooks

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (from https://dashboard.stripe.com/products)
STRIPE_PRICE_STARTER=price_your_starter_price_id
STRIPE_PRICE_PRO=price_your_pro_price_id
STRIPE_PRICE_PREMIUM=price_your_premium_price_id


# ========================================
# PRODUCTION NOTES
# ========================================
# For production deployment on Vercel:
# 1. NEXTAUTH_URL should be: https://oratoriaai.com
# 2. STRIPE_SECRET_KEY should use: sk_live_... (not sk_test_...)
# 3. All Stripe Price IDs should be from live mode
# 4. Configure webhook endpoint: https://oratoriaai.com/api/webhooks/stripe
